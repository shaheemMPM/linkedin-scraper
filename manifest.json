{
  "name": "SalesNav Scrapper",
  "version": "0.0.1",
  "description": "Scrap data from linked in sales navigator",
  "manifest_version": 2,
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png",
    "16": "./icons/icon16.png"
  },
  "page_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./icons/icon16.png",
    "default_title": "SalesNav Scrapper"
  },

  "options_page": "./options/options.html",

  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/sales/search/people*"],
      "js": [
        "./content.js",
        "./scripts/jquery-3.6.0.min.js",
        "./scripts/sweetalert.min.js"
      ],
      "css": ["./styles/content.css"]
    }
  ],

  "permissions": ["storage", "tabs", "https://www.linkedin.com/*"]
}
